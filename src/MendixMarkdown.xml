<?xml version="1.0" encoding="utf-8"?>
<widget id="Markdown.mendixmarkdown.MendixMarkdown" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
    supportedPlatform="Web" xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Markdown Editor</name>
    <description>Mendix Markdown editor</description>
    <icon>
        
    </icon>

    <properties>
        <propertyGroup caption="Data source">
            <property key="textAttribute" type="attribute">
                <caption>Attribute (path)</caption>
                <description />
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
        </propertyGroup>
        <propertyGroup caption="Toolbar">
            <property key="mdeToolbar" type="object" isList="true" required="false">
                    <caption>Toolbar customization</caption>
                    <description>Refer to the EasyMDE GitHub page for possible options:
                        https://github.com/Ionaru/easy-markdown-editor
                    </description>
                    <properties>
                        <propertyGroup caption="Toolbar buttons">
                            <property key="mdeToolbarButtonName" type="string" required="true">
                                <caption>Button name</caption>
                                <description></description>
                            </property>
                            <property key="mdeToolbarOptionCaption" type="string" required="true">
                                <caption>Button caption</caption>
                                <description></description>
                            </property>
                            <property key="mdeToolbarOptionClassName" type="string" required="true">
                                <caption>Button class</caption>
                                <description></description>
                            </property>
                            <property key="mdeToolbarOptionLeftReplace" type="string" required="true">
                                <caption>Left hand side replace</caption>
                                <description></description>
                            </property>
                            <property key="mdeToolbarOptionRightReplace" type="string" required="true">
                                <caption>Right hand side replace</caption>
                                <description></description>
                            </property>
                        </propertyGroup>
                    </properties>
                </property>
            <property key="mdeHideIcons" type="string" required="false">
                <caption>Buttons to hide</caption>
                <description>Defines which buttons to hide on the toolbar, separated by spaces only. Refer to the
                    EasyMDE documentation to see what options there are.</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Options">
            <propertyGroup caption="Basic">
                <property key="mdeSpellChecker" type="boolean" required="true" defaultValue="true">
                    <caption>Use spell checker</caption>
                    <description>Spellchecker automatically highlights misspelled words in red.</description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Advanced">
                <property key="mdeOptions" type="object" isList="true" required="false">
                    <caption>Editor options</caption>
                    <description>Refer to the EasyMDE GitHub page for possible options:
                        https://github.com/Ionaru/easy-markdown-editor
                    </description>
                    <properties>
                        <propertyGroup caption="Options">
                            <property key="key" type="string" required="true" defaultValue="autofocus">
                                <caption>Option</caption>
                                <description>The option name as defined by EasyMDE</description>
                            </property>
                            <property key="value" type="string" required="true" defaultValue="true">
                                <caption>The option value</caption>
                                <description></description>
                            </property>
                        </propertyGroup>
                    </properties>
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>